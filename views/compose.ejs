<%- include("partials/header"); -%>

<h1 style="padding-bottom: 50px">Compose</h1>
<div class="form-group">
  <form action="/compose" method="post">
    <h4>Title</h4>
    <input type="text" class="form-control" name="posttitle" />
    <h4>Content</h4>
    <textarea
      name="postbody"
      cols="40"
      rows="5"
      class="form-control"
      style="margin-bottom: 30px"
    ></textarea>
    <button class="btn btn-primary" name="button" type="submit">Publish</button>
  </form>
</div>

<%- include("partials/footer"); -%>
